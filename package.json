{
    "name": "ftrack-connect-spark",
    "private": true,
    "version": "0.0.1",
    "description": "ftrack-connect-spark provides a base to build ftrack integrations using web technologies.",
    "main": "source/index.js",
    "scripts": {
        "clean": "rimraf dist/*",
        "copy": "copyfiles -f ./source/index.html ./source/favicon.ico ./dist & copyfiles -f ./source/application/adobe/index.html ./dist/adobe ",
        "dist": "npm run copy & webpack --env=dist",
        "lint": "eslint ./source",
        "posttest": "npm run lint",
        "release:major": "npm version major && npm publish && git push --follow-tags",
        "release:minor": "npm version minor && npm publish && git push --follow-tags",
        "release:patch": "npm version patch && npm publish && git push --follow-tags",
        "serve": "node server.js --env=dev",
        "serve:dist": "node server.js --env=dist",
        "serve:adobe": "node server.js --env=dev_adobe",
        "start": "node server.js --env=dev",
        "test": "karma start",
        "test:watch": "karma start --autoWatch=true --singleRun=false"
    },
    "repository": "https://bitbucket.org/ftrack/ftrack-connect-spark",
    "keywords": [],
    "author": "ftrack",
    "license" : "Apache-2.0",
    "devDependencies": {
        "autoprefixer": "^6.3.3",
        "babel-core": "^6.0.0",
        "babel-eslint": "^5.0.0",
        "babel-loader": "^6.0.0",
        "babel-polyfill": "^6.3.14",
        "babel-preset-es2015": "^6.0.15",
        "babel-preset-react": "^6.0.15",
        "babel-preset-react-hmre": "^1.1.0",
        "chai": "^3.2.0",
        "copyfiles": "^0.2.1",
        "css-loader": "^0.23.0",
        "eslint": "^2.2.0",
        "eslint-config-airbnb": "^6.0.2",
        "eslint-loader": "^1.0.0",
        "eslint-plugin-react": "^4.0.0",
        "exports-loader": "^0.6.3",
        "file-loader": "^0.8.4",
        "glob": "^7.0.0",
        "isparta-instrumenter-loader": "^1.0.0",
        "json-loader": "^0.5.4",
        "karma": "^0.13.9",
        "karma-chai": "^0.1.0",
        "karma-coverage": "^0.5.3",
        "karma-mocha": "^0.2.0",
        "karma-mocha-reporter": "^2.0.0",
        "karma-phantomjs-launcher": "^1.0.0",
        "karma-sourcemap-loader": "^0.3.5",
        "karma-webpack": "^1.7.0",
