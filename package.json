        "phantomjs-prebuilt": "^2.0.0",
        "postcss": "^5.0.11",
        "postcss-loader": "^0.8.0",
        "react-addons-test-utils": "^0.14.0",
        "rimraf": "^2.4.3",
        "sass-loader": "^3.1.2",
        "style-loader": "^0.13.0",
